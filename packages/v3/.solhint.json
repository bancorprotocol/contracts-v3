{
    "extends": "solhint:recommended",
    "rules": {
        "avoid-throw": "off",
        "avoid-suicide": "error",
        "avoid-sha3": "warn",
        "not-rely-on-time": "off",
        "no-empty-blocks": "off",
        "mark-callable-contracts": "off",
        "compiler-version": ["error", "0.7.6"]
    }
}
